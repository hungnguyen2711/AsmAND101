<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TrangChuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý nhân sự"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#8BC34A"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fpoly sofware companty"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="#FF5722"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
            <Button
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/imgPhongBan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Phòng Ban"
                android:background="@drawable/backgroundtrangchu"
                app:backgroundTint="@null"
                android:drawableTop="@drawable/ic_phongban"
                android:textSize="22dp"
                android:textColor="#F44336"
                android:textStyle="bold"
                />
            <Button
                android:layout_weight="1"
                android:id="@+id/imgNhanVien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nhân Viên"
                android:textStyle="bold"
                android:textColor="#1D0DED"
                android:textSize="22dp"
                android:background="@drawable/backgroundtrangchu"
                app:backgroundTint="@null"
                android:drawableTop="@drawable/ic_nhanvien"/>
    </LinearLayout>

        <Button
            android:id="@+id/imgExit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Thoát"
            android:textColor="#575050"
            android:textStyle="bold"
            android:background="@drawable/backgroundtrangchu"
            app:backgroundTint="@null"
            android:drawableTop="@drawable/ic_thoat"
            android:layout_marginTop="20dp"
            />

</LinearLayout>